rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user owns the document (assuming 'createdBy' or 'ownerEmail' field)
    function isOwner(email) {
      return isAuthenticated() && request.auth.token.email == email;
    }

    // Collection: claimLinks
    match /claimLinks/{linkId} {
      // Allow public read if the link is active
      allow read: if resource.data.isActive == true || (isAuthenticated() && resource.data.createdBy == request.auth.token.email);
      
      // Allow creation/update only by authenticated users for their own links
      allow create: if isAuthenticated() && request.resource.data.createdBy == request.auth.token.email;
      allow update: if isAuthenticated() && resource.data.createdBy == request.auth.token.email;
      allow delete: if isAuthenticated() && resource.data.createdBy == request.auth.token.email;
    }

    // Collection: claims
    match /claims/{claimId} {
      // Allow public creation (anyone can claim a reward)
      // We validate that the linkId exists and is active in the business logic (hooks/functions),
      // but strict referential integrity in rules is complex without getting costly.
      // We allow create if the user provides all necessary fields.
      allow create: if true;

      // Allow read only by the owner of the claim link (the admin)
      allow read: if isAuthenticated() && resource.data.ownerEmail == request.auth.token.email;
      
      // Allow updates (e.g., mark as completed) only by the owner
      allow update: if isAuthenticated() && resource.data.ownerEmail == request.auth.token.email;
    }

    // Collection: users
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
